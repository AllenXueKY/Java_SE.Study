import java.util.Scanner;

/**
 * 十六进制和十进制之间的转换
 * @author 87366
 *
 */
public class HexToDecimalDemo {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.print("请输入一个整形数字：");
		int decNum=input.nextInt();
		System.out.println(HexToDec(decNum));
		
	}
	/**
	 * 调用方法将十进制转换为十六进制
	 * @param decNum 要转换的十进制数字
	 * @return 转换成十六进制的数字（以字符串的方式返回）
	 */
	public static String HexToDec(int decNum) {
		String hex ="";
		while (decNum!=0) {
			int temp = decNum%16;
			if (temp>=0&&temp<=9) {
				hex = temp+hex;
			}else if(temp>=10&&temp<=15) {
				hex=(char)(temp-10+'A')+hex;
			}
			decNum/=16;
		}
		return hex;
	}
	
	
	
	
	
	
}
